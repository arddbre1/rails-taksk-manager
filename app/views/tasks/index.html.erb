<h1>My tasks</h1>


<% @tasks.each do |task| %>
  <li>
  <input type="checkbox" <%= "checked" if task.completed == true %>><%= link_to task.title, task_path(task) %>
 </li>
<% end %>

<br/>

<%= link_to "Add a task", new_path %>

<h2>Add a task</h2>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit "Add a task"%>
<% end %>
